<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="OrderTrackingApp.Views.SettingsView"
             Title="Settings">
    <ContentPage.Content>
        <StackLayout>
            <Button x:Name="BtnProducts" Grid.Row="2" Text="Products" Command="{Binding ProductsButtonClick}" Margin="30,50,30,0"/>
            <Picker Title="Language" ItemsSource="{Binding LanguageItems}" SelectedItem="{Binding SelectedLanguage}" Margin="30,30,30,0"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>